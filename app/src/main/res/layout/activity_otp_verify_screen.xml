<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent"
    tools:context=".auth.OtpVerifyScreen">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="@dimen/height_24"
        android:layout_height="@dimen/height_24"
        android:src="@drawable/back_btn"
        android:padding="@dimen/elevation_4"
        android:layout_margin="@dimen/elevation_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/elevation_20"
        android:layout_marginRight="@dimen/elevation_20"
        android:layout_below="@id/backBtn"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Verification Code"
            android:textStyle="bold"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@android:color/black"
            android:textSize="@dimen/elevation_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter 6 digit verification sent to 184"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/primarytext"
            />

        <EditText
            android:id="@+id/enter_opt"
            android:layout_width="@dimen/height_200"
            android:layout_height="@dimen/height_45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/elevation_16"
            android:background="@drawable/curved_grey_round"
            android:hint="Enter Otp"
            android:gravity="center"
            android:fontFamily="@font/opensans_regular"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_corner"
            android:layout_marginLeft="@dimen/height_40"
            android:layout_marginRight="@dimen/height_40"
            android:layout_marginTop="@dimen/elevation_20"
            android:backgroundTint="#E66270"
            android:text="Continue"
            android:fontFamily="@font/opensans_regular"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:paddingRight="@dimen/elevation_16"
            android:textSize="@dimen/elevation_18"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/elevation_20"
            android:padding="@dimen/elevation_8"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't get otp?"
                android:fontFamily="@font/opensans_regular"
                android:textSize="@dimen/elevation_16"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:layout_marginLeft="@dimen/height_5"
                android:textSize="@dimen/elevation_16"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>