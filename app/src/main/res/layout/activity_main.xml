<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tooBaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/elevation_12">

            <TextView
                android:id="@+id/nav_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/elevation_18"
                android:fontFamily="@font/opensans_regular"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:src="@drawable/beer"/>

            <ImageView
                android:id="@+id/searchbtn"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:padding="@dimen/elevation_6"
                android:layout_alignParentRight="true"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_search"/>

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:padding="@dimen/elevation_6"
                android:layout_alignParentRight="true"
                android:tint="@color/colorPrimaryDark"
                android:visibility="gone"
                android:src="@drawable/ic_close"/>

            <TextView
                android:id="@+id/userProfile"
                android:layout_width="@dimen/margin_32"
                android:layout_height="@dimen/margin_32"
                android:layout_alignParentRight="true"
                android:text="S"
                android:layout_marginRight="@dimen/margin_50"
                android:layout_marginTop="@dimen/elevation_4"
                android:textColor="@color/white"
                android:background="@drawable/round_btn"
                android:visibility="visible"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/elevation_18"
                android:tint="@color/colorPrimaryDark"
                android:onClick="profile"
                android:src="@drawable/beer"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jharkhand, Media City"
                android:layout_marginLeft="@dimen/elevation_16"
                android:textSize="@dimen/elevation_20"
                android:fontFamily="@font/opensans_regular"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginRight="@dimen/elevation_16"
            android:layout_marginLeft="@dimen/elevation_16"
            android:layout_marginTop="@dimen/elevation_4"
            android:backgroundTint="@color/app_background"
            android:visibility="gone"
            android:background="@drawable/curved_grey_round">

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/elevation_16"
                android:paddingRight="@dimen/elevation_16"
                android:layout_marginRight="@dimen/elevation_16"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/elevation_16"
                android:inputType="text"
                android:drawableTint="@color/colorPrimaryDark"
                android:fontFamily="@font/opensans_regular"
                android:hint="Search"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/app_background"/>



        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/elevation_8"
        android:layout_marginRight="@dimen/elevation_16"
        android:layout_marginLeft="@dimen/elevation_16"
        android:layout_gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_job_btn"
            android:layout_width="200dp"
            android:layout_height="@dimen/height_40"
            android:layout_margin="@dimen/elevation_4"
            android:layout_weight="1"
            android:text="Beer"
            android:gravity="center_vertical"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/elevation_18"
            android:textStyle="bold"/>

    </LinearLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/elevation_12"
                card_view:cardCornerRadius="@dimen/elevation_6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_150"
                        card_view:cardCornerRadius="@dimen/elevation_8"
                        android:elevation="@dimen/elevation_8">

                        <ImageView
                            android:id="@+id/companyLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/image_one"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card1"
                        android:layout_marginTop="@dimen/elevation_2"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/postName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="brande Name Beer"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/elevation_16"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/elevation_20"
                            android:fontFamily="@font/opensans_regular"/>

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/locatonLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elevation_16"
                        android:layout_below="@id/name">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Andheri west Mumbai 400053"
                            android:layout_marginLeft="@dimen/height_30"
                            android:fontFamily="@font/opensans_regular"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/elevation_16"
                        android:layout_marginRight="@dimen/elevation_6"
                        android:id="@+id/SalaryLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/elevation_6"
                        android:layout_below="@id/locatonLay">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="@dimen/height_24"
                            android:src="@drawable/money"/>

                        <TextView
                            android:id="@+id/salary"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_24"
                            android:text="INR 190"
                            android:layout_marginLeft="@dimen/height_30"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/elevation_3"
                            android:fontFamily="@font/opensans_regular"/>


                        <TextView
                            android:id="@+id/additem"
                            android:layout_width="@dimen/height_100"
                            android:layout_height="@dimen/height_35"
                            android:layout_alignParentRight="true"
                            android:text="ADD"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:background="@drawable/rect_corner"
                            android:paddingRight="@dimen/elevation_16"
                            android:drawableRight="@drawable/ic_add"
                            android:drawablePadding="@dimen/elevation_6"/>

                    </RelativeLayout>



                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="@dimen/elevation_20"/>

        <com.agrawalsuneet.dotsloader.loaders.LazyLoader
            android:id="@+id/lazyloader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:lazyloader_animDur="300"
            app:lazyloader_dotsDist="10dp"
            android:layout_centerInParent="true"
            app:lazyloader_dotsRadius="@dimen/elevation_10"
            app:lazyloader_firstDelayDur="150"
            app:lazyloader_firstDotColor="@color/colorPrimaryDark"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:lazyloader_secondDotColor="@color/colorPrimaryDark"
            app:lazyloader_thirdDotColor="@color/colorPrimaryDark"
            android:visibility="visible"/>



            <RelativeLayout
                android:id="@+id/viewCardLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/elevation_8"
                android:visibility="gone"
                android:background="#E66270"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_5"
                    android:layout_marginLeft="@dimen/elevation_16"
                    android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="2 items"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:fontFamily="@font/opensans_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="550 Total "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_alignParentRight="true"
                    android:text="Add your details"
                    android:fontFamily="@font/opensans_regular"
                    android:textStyle="bold"
                    android:onClick="detail"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:drawableRight="@drawable/ic_play_arrow"
                    android:drawableTint="@color/white"
                    android:paddingRight="@dimen/elevation_16"
                    android:drawablePadding="@dimen/height_15" />
            </RelativeLayout>



        </RelativeLayout>


    </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>